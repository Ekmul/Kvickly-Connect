@page
@model Kvickly_Connect.Pages.Login.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<form class="form-horizontal" method="post">
    <div class="form-group">
        <h1>Please register at Kvickly Connect!</h1>
    </div>
    <!--Name-->
        <div class="form-group">
            <label asp-for="@Model.Customer.FirstName" class="col-sm-2 control-label">First name</label>
            <div class="col-sm-5">
                <input asp-for="@Model.Customer.FirstName" type="text" class="form-control" required />
                <span asp-validation-for="@Model.Customer.FirstName" class="text-danger"></span>
            </div>
        </div>
        <!--Email-->
        <div class="form-group">
            <label asp-for="@Model.Customer.LastName" class="col-sm-2 control-label">Last Name</label>
            <div class="col-sm-5">
                <input asp-for="@Model.Customer.LastName" type="text" class="form-control" required />
                <span asp-validation-for="@Model.Customer.LastName" class="text-danger"></span>
            </div>
        </div>
        <!-- Password -->
        <div class="form-group">
            <label asp-for="@Model.Customer.Password" class="col-sm-2 control-label">Password</label>
            <div class="col-sm-5">
                <input asp-for="@Model.Customer.Password" type="text" class="form-control" required />
                <span asp-validation-for="@Model.Customer.Password" class="text-danger"></span>
            </div>
        </div>
        <!-- Email -->
        <div class="form-group">
            <label asp-for="@Model.Customer.Email" class="col-sm-2 control-label">Email</label>
            <div class="col-sm-5">
                <input asp-for="@Model.Customer.Email" type="text" class="form-control" required />
                <span asp-validation-for="@Model.Customer.Email" class="text-danger"></span>
            </div>
        </div>
        <!-- Address -->
        <div class="form-group">
            <label asp-for="@Model.Customer.Address" class="col-sm-2 control-label">Address</label>
            <div class="col-sm-5">
                <input asp-for="@Model.Customer.Address" type="text" class="form-control" required />
                <span asp-validation-for="@Model.Customer.Address" class="text-danger"></span>
            </div>
        </div>
        <!-- City -->
        <div class="form-group">
            <label asp-for="@Model.Customer.City" class="col-sm-2 control-label">City</label>
            <div class="col-sm-5">
                <input asp-for="@Model.Customer.City" type="text" class="form-control" required />
                <span asp-validation-for="@Model.Customer.City" class="text-danger"></span>
            </div>
        </div>
        <!-- Zip code-->
        <div class="form-group">
            <label asp-for="@Model.Customer.ZipCode" class="col-sm-2 control-label">Zip Code</label>
            <div class="col-sm-5">
                <select asp-for="@Model.Customer.ZipCode">
                    <option value="4000">4000 Roskilde</option>
                    <option value="4440">4400 Mørkøv </option>
                    <option value="4340">4340 Tølløse</option>
                    <option value="4600">4600 Køge</option>
                    <option value="2640">2640 Hedehusene</option>
                    <option value="2630">2630 Taastrup</option>
                    <option value="4300">4300 Holbæk</option>
                    <option value="4520">4520 Svindinge</option>
                    <option value="3400">3400 Hillerød</option>
                    <option value="4100">4100 Ringsted</option>
                </select>
                @*<input asp-for="@Model.Customer.ZipCode" type="text" class="form-control" required />*@
                <span asp-validation-for="@Model.Customer.ZipCode" class="text-danger"></span>
            </div>
        </div>
        <!-- Button -->
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-dark">Register</button>
            </div>
        </div>
</form>