@page
@model Kvickly_Connect.Pages.Login.LoginModel
@{
    ViewData["Title"] = "Login";
}
<form class="form-horizontal" method="post">
    <div class="form-group">
        <h3 class="col-sm-3 control-label">Login</h3>
    </div>
<div class="form-group">
    <label asp-for="@Model.Customer.Email" class="col-sm-3 control-label">Email</label>
    <div class="col-sm-6">
        <input type="email" class="form-control" name="Email">
    </div>
</div>
<div class="form-group">
    <label asp-for="@Model.Customer.Password" class="col-sm-2 control-label">Password</label>
    <div class="col-sm-5">
        <input type="password" id="pass" name="password" required />
    </div>
</div>
<div class="form-group">
        <div class="col-sm-5">
            <button type="submit" class="btn btn-dark">Login</button>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-5">
            <a class="nav-link text-dark" asp-area="" asp-page="/Login/Register">Don't have an account? Register!</a>
        </div>
    </div>
</form>
