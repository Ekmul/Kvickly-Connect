@page
@model Kvickly_Connect.CreateItemModel
@{
    ViewData["Title"] = "CreateItem";
}
<style>
    h5 {
        text-align: center;
        color: blueviolet
    }
</style>

<h6 style="color:blue"> Create a new Item</h6>

<form class="form-horizontal" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group" style="width:25%">
        <label asp-for="@Model.Item.ItemID" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Item.ItemID" type="text" class="form-control">
            <span asp-validation-for="@Model.Item.ItemID" class="text-danger"></span>
        </div>
    </div>
    <div style="width:25%" class="form-group">
        <label asp-for="@Model.Item.Name" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Item.Name" type="text" class="form-control">
            <span asp-validation-for="@Model.Item.Name" class="text-danger"></span>
        </div>
    </div>
    <div style="width:25%" class="form-group">
        <label asp-for="@Model.Item.ImagePath" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Item.ImagePath" type="text" class="form-control">
            <span asp-validation-for="@Model.Item.ImagePath" class="text-danger"></span>
        </div>
    </div>

    <div style="width:25%" class="form-group">
        <label asp-for="@Model.Item.Description" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Item.Description" type="text" class="form-control">
            <span asp-validation-for="@Model.Item.Description" class="text-danger"></span>
        </div>
    </div>

    <div style="width:25%" class="form-group">
        <label asp-for="@Model.Item.Price" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Item.Price" type="text" class="form-control">
            <span asp-validation-for="@Model.Item.Price" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="border-light">
                Add Item
            </button>
        </div>
    </div>
</form>
