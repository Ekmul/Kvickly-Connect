@page
@model Kvickly_Connect.Pages.Items.AdminItemsModel
@{
}
<h1>Admin Items</h1>

<p>
    <a asp-page="CreateItem">Create New Item</a>
</p>

<h5>The number of Items is : @Model.Items.Count</h5>

<form>
    <p>
        Search: <input type="text" asp-for="FilterCriteria" />
        <input type="submit" value="Filter" />
    </p>
</form>


<table class="table">
    <thead>
        <tr>
            <th>Item ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Items.Count!=0)
        {
        @foreach (var item in Model.Items)
        {
        <tr>
            <td>
                @item.Value.ItemID
            </td>
            <td>
                @item.Value.Name
            </td>
            <td>
                @item.Value.Price
            </td>
            <td>
                @item.Value.Description
            </td>
            <td>
                <img src="~/Images/@item.Value.ImagePath" width="80" height="70">
            </td>
            <td>
                <p>
                    <a asp-page="EditItem" asp-route-id="@item.Key">Edit</a> /
                    <a asp-page="DeleteItem" asp-route-id="@item.Key">Delete</a>
                </p>
            </td>
        </tr>
        }
        }
    </tbody>
</table>