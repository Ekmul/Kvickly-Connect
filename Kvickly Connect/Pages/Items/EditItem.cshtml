@page "{id}"
@model Kvickly_Connect.Pages.Items.EditItemModel
@{      
    ViewData["Title"] = "EditItem";
}
<h1>Edit Item</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Item.ItemID" class="control-label"></label>
        <input asp-for="@Model.Item.ItemID" class="form-control" />
        <span asp-validation-for="@Model.Item.ItemID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Item.Name" class="control-label"></label>
        <input asp-for="@Model.Item.Name" class="form-control" />
        <span asp-validation-for="@Model.Item.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Item.Description" class="control-label"></label>
        <input asp-for="@Model.Item.Description" class="form-control" />
        <span asp-validation-for="@Model.Item.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Item.Price" class="control-label"></label>
        <input asp-for="@Model.Item.Price" class="form-control" />
        <span asp-validation-for="@Model.Item.Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Item.ImagePath" class="control-label"></label>
        <input asp-for="@Model.Item.ImagePath" class="form-control" />
        <span asp-validation-for="@Model.Item.ImagePath" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>